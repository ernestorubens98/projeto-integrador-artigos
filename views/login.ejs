<%- include('parts/head',{title:'Login'}); %>

<body class="container min-vh-100 d-flex flex-column justify-content-center align-items-center bg-dark text-light tela-login">
    <div class="d-flex justify-content-center h1 mb-3">
        Entrar no RVW Article
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <div>
            <img src="/images/login.svg" alt="foto-de-login" class="foto-login">
        </div>
        
        <div class="bg-darkOver1  vh-75 vw-75 p-5 shadow-lg">

            <div class="bg-darkOver1  vh-75 vw-75 p-5 shadow">
                <div class="d-flex justify-content-center form_container mt-3 bg-lightOver1 shadow vh-75 vw-75 p-5">
                    <form method="POST" action="/usuario/login">
                        <% if(typeof(err) != "undefined") { %>
                            <div class="alert alert-danger mb-3 p-2" role="alert"><%= err[0].msg %></div>
                        <% } %>

                        <% if (typeof(error) != "undefined") { %>
                            <div class="alert alert-danger mb-3 p-2" role="alert"><%= error %></div>
                        <% } %>

                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input type="email" name="email" class="form-control input_pass" value="" placeholder="Email" required>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-append mt-3">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="senha" class="form-control input_pass mt-3" value="" placeholder="Password" required>
                        </div>
                        <div class="form-group mt-3">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="customControlInline">
                                <label class="custom-control-label" for="customControlInline">Lembrar minha senha</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" class="btn btn-primary form-control mt-3 entrar-login">Entrar</button>
                        </div>
                        <div class="mt-5">
                            <div class="d-flex justify-content-center links">
                                <p>NÃ£o tem uma conta?</p> 
                                <a href="cadastrar" class="ml-2">Cadastrar</a>
                            </div>
                            <div class="d-flex justify-content-center links mt-2">
                                <a href="esqueceu-senha">Esqueceu sua senha?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('parts/foot'); %>